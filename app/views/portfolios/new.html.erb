<%= javascript_include_tag "http://yui.yahooapis.com/3.8.1/build/yui/yui-min.js" %>


<%= form_for(@portfolio) do |f|%>
  <%= f.text_field :portfolio_name, placeholder: "Portfolio name" %>
  <%= f.submit "Create a portfolio"%>
<%end%>

<div class="add-asset-container">
  <p>Add a stock, bond, or ETF</p>
  <%= form_for(@asset) do |f| %>
  <%= hidden_field_tag :portfolio_id, params[:id]%>
  <div class="add-asset-field  yui3-skin-sam">
    <%= f.text_field :asset_symbol, :id=>'ac-input' %>
  </div>
  <div class="add-asset-table">
    <table>
      <tr>
        <td># of Shares</td>
        <td>Cost Basis</td>
        <td>Date Purchased</td>
      </tr>
      <tr>
        <td><%= f.text_field :shares, :class=> 'positive' %></td>
        <td><%= f.text_field :cost, :class=> 'positive' %></td>
        <td><%= f.text_field :purchase_date, :type=>'date' %></td>
      </tr>
    </table>
  </div>
</div>
<div class= "submit-button">
  <%= f.submit "+ Add to Portfolio", class: "add-asset-button"%>
</div>
  <%end%>
