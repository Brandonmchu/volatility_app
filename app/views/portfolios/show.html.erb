<%= javascript_include_tag "http://yui.yahooapis.com/3.8.1/build/yui/yui-min.js" %>

    <h1>Add Assets to your Portfolio</h1>
      <div class="add-asset-container">
      <p>Add a stock, bond, or ETF</p>
      <%= form_for(@asset) do |f| %>
      <%= hidden_field_tag :portfolio_id, params[:id]%>
      <div class="add-asset-field  yui3-skin-sam">
        <%= f.text_field :asset_symbol, :id=>'ac-input' %>
      </div>
      <div class="add-asset-table">
        <table>
          <tr>
            <td># of Shares</td>
            <td>Cost Basis</td>
            <td>Date Purchased</td>
          </tr>
          <tr>


            <td><%= f.text_field :shares, :class=> 'positive' %></td>
            <td><%= f.text_field :cost, :class=> 'positive' %></td>
            <td><%= f.text_field :purchase_date, :type=>'date' %></td>
          </tr>
          </table>
        </div>
        </div>
            <div class= "submit-button">
            <%= f.submit "+ Add to Portfolio", class: "add-asset-button"%>
            </div>
            <%end%>



      <div class="main-header">
        <h1>Currently viewing: <%= @current_portfolio.portfolio_name %></h1>
      </div>

      <h2 id='portfolio-title'>View one of your portfolios </h2>
      <ul class="user-portfolios">
        <%= render @userportfolios %>
        <li>
          <%= form_for(@portfolio) do |f|%>
              <%= f.label :portfolio_name %>
              <%= f.text_field :portfolio_name %>
              <%= f.submit "Create a portfolio"%>
              <%end%>

            <% if @asset.errors.any? %>

              <% @asset.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
            <% end %>
          <%end%>
        </li>
      </ul>
      <div class="currently-table">
        <table>
            <tr>
              <td>Ticker</td>
              <td># of Shares</td>
              <td>Cost Basis</td>
              <td>Date Purchased</td>

            </tr>


        </table>
        <%= render @assets %>
